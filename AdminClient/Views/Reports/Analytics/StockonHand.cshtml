<h2 class="analy-title">Stock on Hand</h2>
<div class="col-md-12 stock-hand-head">
    <div id="formReport">
        <div class="col-md-12">
            <div class="form-group containtControl" style="display:flex">

                <div class="form-group col-fhd-4 col-xlg-4 col-md-3 col-sm-12 col-xs-2">
                    <div class="input-group">
                        <span class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </span>
                        <input type="text" class="form-control" id="ExpiryManual" />
                    </div>
                </div>
                <div class="form-group col-fhd-2 col-xlg-2 col-md-2 col-sm-12 col-xs-2">
                    <select style="width: 100%" id="LocationID" name="LocationID"></select>
                </div>
                <div class="form-group col-fhd-2 col-xlg-2 col-md-3 col-sm-12 col-xs-2">
                    <select style="width:100%" id="SupplierID" name="SupplierID"></select>    
                </div>
                <div class="form-group col-fhd-2 col-xlg-2 col-md-2 col-sm-12 col-xs-2">
                    <select style="width: 100% " id="BrandID" name="BrandID"></select>

                </div>
                <div class="form-group col-fhd-2 col-xlg-2 col-md-2 col-sm-12 col-xs-2">
                    <select style="width:100%" id="CategoryID" name="CategoryID"></select>

                </div>
            </div>
        </div>
        <div class="col-md-12 stock-hand-table">
            <div class="stock-btn-cont">
                 <button type="button" name="btnView" id="btnView" class="btn btn-square btn-block btn-info" style="width:80px;">View</button>
                
                <div class="export-btn">
                    <button type="button" class="btn btn-info dropdown-toggle export-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Export
                    </button>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 35px, 0px);">
                        <a class="dropdown-item" href="#" style="padding:0px" id="buttonExcel"></a>
                        <a class="dropdown-item" href="#" id="buttonCSV" style="padding:0px"></a>
                        <a class="dropdown-item" href="#" id="buttonPDF" style="padding:0px"></a>
                    </div>
                </div>
     
            </div>
        </div>


    </div>
</div>
<div class="col-md-12 stock-hand-table">
    <div class="col-md-12"><h6 id="txtfilter"></h6></div>
    <div class="col-md-12 containtTable">
        <table class="table table-responsive-sm table-sm datatable no-footer" id="table" style="width:100%">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Location</th>
                    <th>Stock on Hand</th>
                    <th>Total Cost</th>
                    <th>Average Cost</th>
                    <th>Total Retail Value</th>
                    <th>Retail Price</th>
                    <th>Reoder Point</th>
                    <th>Reoder Amount</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>



<script src="@Url.Content("~/Scripts/report/analytics/stockonhand.js")"></script>
