@model Int32
<!--#region Include CSS-->
@Styles.Render("~/Style/datatable")
<link href="@Url.Content("~/Extension/css/select2.min.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/icheck.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/PNotifyBrightTheme.css")" rel="stylesheet" />
<link href="@Url.Content("~/Extension/css/daterangepicker.min.css")" rel="stylesheet" />
<!--#endregion-->
<!--#region Html-->
<div class="animated fadeIn">
    <div class="col-md-12">
        <section class="nav-tabs-scrollable-container reports-nav">
            <ul class="nav nav-pills nav-main" id="myTab1" role="tablist">
                <li class="nav-item">
                    <a class="nav-link @((Model == 1 || Model == 6) ? "active show" : "" )" href="/Inventory/Products?id=0" role="tab">PRODUCTS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model == 2 ? "active show" : "" )" href="/Inventory/Orders" role="tab">ORDERS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model == 3 ? "active show" : "" )" href="/Inventory/Brands" role="tab">BRANDS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model == 4 ? "active show" : "" )" href="/Inventory/Categories" role="tab">CATEGORIES</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model == 5 ? "active show" : "" )" href="/Inventory/Suppliers" role="tab">SUPPLIERS</a>
                </li>
            </ul>
        </section>
        <div class="tab-content tab-content-main" id="myTab1Content">
            <div class="tab-pane fade active show" role="tabpanel">
                @{
                    String fileView = "";
                    switch (Model)
                    {
                        case 1:

                            fileView = "/Views/Inventory/Products.cshtml";
                            break;
                        case 2:
                            fileView = "/Views/Inventory/Orders.cshtml";
                            break;
                        case 3:
                            fileView = "/Views/Inventory/Brands.cshtml";
                            break;
                        case 4:
                            fileView = "/Views/Inventory/Categories.cshtml";
                            break;
                        case 5:
                            fileView = "/Views/Inventory/Suppliers.cshtml";
                            break;
                        case 6:
                            fileView = "/Views/Inventory/ViewProduct.cshtml";
                            break;
                    }
                    @Html.Partial(fileView);
                }
            </div>
        </div>
    </div>

</div>
<!--#endregion-->
<!--#region Include JS-->
<script src="@Url.Content("~/Extension/js/daterangepicker.min.js")"></script>
<script src="@Url.Content("~/Extension/js/select2.min.js")"></script>
<script src="@Url.Content("~/Extension/js/icheck.min.js")"></script>
<script src="@Url.Content("~/Extension/js/jquery.inputmask.bundle.min.js")"></script>
@Scripts.Render("~/Scripts/datatable")
@Scripts.Render("~/Scripts/PNotify")
<!--#endregion-->