@Styles.Render("~/Style/datatable")
<link href="@Url.Content("~/Extension/css/select2.min.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/icheck.css")" rel="stylesheet">
<link href="@Url.Content("~/Content/ivory-style.css")" rel="stylesheet">

<div class="col-12 form-group p-0 containt-home home-page">
    <div class="col-12 form-group p-0 containt-chart">
        <div class="col-12 col-xl-6 form-group p-0 p-md-2 m-0  pb-4">
            <div class="card m-0">
                <div class="card-header">
                    <div class="col-12 col-xl-6 p-0 text-center text-xl-left pt-1">
                        <p class="text-uppercase font-weight-bold">recent sales</p>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="locationRecentSale" name="locationRecentSale"></select>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="rangeDateRecentSale" name="rangeDateRecentSale">
                            <option value="7" selected>Last 7 Days</option>
                            <option value="30">Last 30 Days</option>
                        </select>
                    </div>
                </div>
                <div class="card-body pt-2">
                    <div class="col-12 p-0 form-group title-chart" id="titleChartRecentSale">
                        <div class="col-12 col-xl-4 title-sum">
                            <p class="font-weight-bold mb-0" id="sumAppointments"></p>
                            <p class="font-weight-normal mb-2">Appointments</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-appointment">
                            <p class="font-weight-bold mb-0" id="sumAppointmentsValue"></p>
                            <p class="font-weight-normal mb-2">Appointments value</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-sale">
                            <p class="font-weight-bold mb-0" id="sumSalesValue"></p>
                            <p class="font-weight-normal mb-2">Sales value</p>
                        </div>
                    </div>
                    <div class="col-12 p-0 form-group">
                        <canvas id="chartRecentSale"></canvas>
                    </div>
                </div>
            </div>
            <div class="card d-none m-0" name="notify">
                <div class="card-header text-center text-xl-left">
                    <p class="text-uppercase font-weight-bold">recent sales</p>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="text-center">
                        <h1><i class="fa fa-bar-chart fa-lg"></i></h1>
                        <h3 class="text-capitalize">Your Sale is Empty</h3>
                        <p>Make some invoice for sale data to appear</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6 form-group p-0 p-md-2 m-0  pb-4">
            <div class="card m-0">
                <div class="card-header">
                    <div class="col-12 col-xl-6 p-0 text-center text-xl-left pt-1">
                        <p class="text-uppercase font-weight-bold">upcoming appointments</p>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="locationUpcomingAppointment" name="locationUpcomingAppointment"></select>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="rangeDateUpcomingAppointment" name="rangeDateUpcomingAppointment">
                            <option value="7" selected>Next 7 Days</option>
                            <option value="30">Next 30 Days</option>
                        </select>
                    </div>
                </div>
                <div class="card-body pt-2">
                    <div class="col-12 p-0 form-group title-chart" id="titleChartUpcomingAppointment">
                        <div class="col-12 col-xl-4 title-sum">
                            <p class="font-weight-bold mb-0" id="sumAppointmentsBooked"></p>
                            <p class="font-weight-normal mb-2">Appointments Booked</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-confirmed">
                            <p class="font-weight-bold mb-0" id="sumConfirmed"></p>
                            <p class="font-weight-normal mb-2">Confirmed</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-canceled">
                            <p class="font-weight-bold mb-0" id="sumCancelled"></p>
                            <p class="font-weight-normal mb-2">Cancelled</p>
                        </div>
                    </div>
                    <div class="col-12 p-0 form-group">
                        <canvas id="chartUpcomingAppointment"></canvas>
                    </div>
                </div>
            </div>
            <div class="card d-none m-0" name="notify">
                <div class="card-header text-center text-xl-left">
                    <p class="text-uppercase font-weight-bold">upcoming appointments</p>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="text-center">
                        <h1><i class="fa fa-bar-chart fa-lg"></i></h1>
                        <h3 class="text-capitalize">Your Schedule is Empty</h3>
                        <p>Make some appointments for schedule data to appear</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 form-group p-0 containt-info">
        <div class="col-12 col-xl-6 form-group p-0 p-md-2 m-0  pb-4">
            <div class="card m-0">
                <div class="card-header text-center text-xl-left">
