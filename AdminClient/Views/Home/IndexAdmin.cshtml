<link href="@Url.Content("~/Extension/css/select2.min.css")" rel="stylesheet">
<div class="col-12 form-group p-0 containt-home">
    <div class="col-12 form-group p-0">
        <div class="col-md-3 col-6 p-0 pb-4">
            <select class="form-control" id="bussinessID" name="bussinessID"></select>
        </div>
        <div class="col-md-9 col-6"></div>
    </div>
    <div class="col-12 form-group p-0">
        <div class="card card-accent-info">
            <div class="card-header font-weight-bold text-danger text-uppercase">
                appointment value
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-lg-3">
                        <div class="card text-white bg-danger">
                            <div class="card-header">
                                Total
                            </div>
                            <div class="card-body pb-0">
                                <div class="text-value"><h2 id="TotalDashboardAdmin"></h2></div>
                            </div>
                            <div class="card-footer">
                                <div class="text-value"><h5 class="text-right text-dark">&nbsp;</h5></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <div class="card text-white bg-primary">
                            <div class="card-header">
                                Today
                            </div>
                            <div class="card-body pb-0">
                                <div class="text-value"><h2 id="TodayDashboardAdmin"></h2></div>
                            </div>
                            <div class="card-footer">
                                <div class="text-value"><h5 id="TodayPerDashboardAdmin" class="text-right text-dark"></h5></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <div class="card text-white bg-info">
                            <div class="card-header">
                                This week
                            </div>
                            <div class="card-body pb-0">
                                <div class="text-value"><h2 id="ThisWeekDashboardAdmin"></h2></div>
                            </div>
                            <div class="card-footer">
                                <div class="text-value"><h5 id="ThisWeekPerDashboardAdmin" class="text-right text-dark"></h5></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-3">
                        <div class="card text-white bg-info">
                            <div class="card-header">
                                This month
                            </div>
                            <div class="card-body pb-0">
                                <div class="text-value"><h2 id="ThisMonthDashboardAdmin"></h2></div>
                            </div>
                            <div class="card-footer">
                                <div class="text-value"><h5 id="ThisMonthPerDashboardAdmin" class="text-right text-dark"></h5></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-accent-warning">
            <div class="card-header font-weight-bold text-danger text-uppercase">
                business
            </div>
            <div class="card-body">
                <div class="d-flex">
                    <div class="col-sm-6" style="flex-basis: 20%">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="h1 text-muted text-right mb-4">
                                    <i class="icon-people"></i>
                                </div>
                                <div class="text-value"><h2 id="BTotalDashboardAdmin"></h2></div>
                                <small class="text-uppercase font-weight-bold font-lg text-uppercase">total</small>
                                <div class="progress progress-white progress-xs mt-3">
                                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6" style="flex-basis: 20%">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="h1 text-muted text-right mb-4">
                                    <i class="icon-user-follow"></i>
                                </div>
                                <div class="text-value"><h2 id="BNewDashboardAdmin"></h2></div>
                                <small class="text-uppercase font-weight-bold font-lg text-uppercase">new</small>
                                <div class="progress progress-white progress-xs mt-3">
                                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6" style="flex-basis: 20%">
                        <div class="card text-white bg-primary">
                            <div class="card-body bg-warning">
                                <div class="h1 text-muted text-right mb-4">
                                    <i class="icon-user-follow"></i>
                                </div>
                                <div class="text-value"><h2 id="BTrialDashboardAdmin"></h2></div>
                                <small class="text-uppercase font-weight-bold font-lg text-uppercase">trials</small>
                                <div class="progress progress-white progress-xs mt-3">
                                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6" style="flex-basis: 20%">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="h1 text-muted text-right mb-4">
                                    <i class="icon-user-following"></i>
                                </div>
                                <div class="text-value"><h2 id="BPaidDashboardAdmin"></h2></div>
                                <small class="text-uppercase font-weight-bold font-lg text-uppercase">paid</small>
                                <div class="progress progress-white progress-xs mt-3">
                                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6" style="flex-basis: 20%">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="h1 text-muted text-right mb-4">
                                    <i class="icon-user-unfollow"></i>
                                </div>
                                <div class="text-value"><h2 id="BExpiredDashboardAdmin"></h2></div>
                                <small class="text-uppercase font-weight-bold font-lg text-uppercase">expired</small>
                                <div class="progress progress-white progress-xs mt-3">
                                    <div class="progress-bar" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="card card-accent-danger">
            <div class="card-header font-weight-bold text-danger text-uppercase">
                appointment bookings
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-automobile bg-primary p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABTotalDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">Total</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-file-text-o bg-info p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABNewDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">New</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-arrow-circle-o-right bg-warning p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABConfirmedDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">confirmed</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-thumbs-o-up bg-danger p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABArrivedDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">arrived</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-gears bg-warning p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABStartedDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">started</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-2">
                        <div class="card">
                            <div class="card-body p-0 d-flex align-items-center p-2">
                                <i class="fa fa-moon-o bg-danger p-4 font-2xl mr-3"></i>
                                <div>
                                    <div class="text-value-sm text-primary"><p id="ABFinishedDashboardAdmin" class="mb-0"></p></div>
                                    <div class="text-uppercase font-weight-bold small text-uppercase">finished</div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="card card-accent-danger">
            <div class="card-body">
                <div class="col-6 p-0 form-group">
                    <div class="col-6">
                        <div class="brand-card">
                            <div class="brand-card-header bg-google-plus">
                                <i class="fa fa-google-plus"></i>

                            </div>
                            <div class="brand-card-body">
                                <div>
                                    <div class="text-value" id="EmailSentDashboardAdmin"></div>
                                    <div class="text-uppercase text-muted small">Email Sent</div>
                                </div>
                                <div>
                                    <div class="text-value" id="EmailBouncedDashboardAdmin"></div>
                                    <div class="text-uppercase text-muted small">Email Bounced</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="brand-card">
                            <div class="brand-card-header bg-twitter">
                                <i class="fa fa-twitter"></i>
                                <div class="chart-wrapper">
                                    <canvas id="social-box-chart-4" height="90"></canvas>
                                </div>
                            </div>
                            <div class="brand-card-body">
                                <div>
                                    <div class="text-value" id="SMSSentDashboardAdmin"></div>
                                    <div class="text-uppercase text-muted small">SMS Sent</div>
                                </div>
                                <div>
                                    <div class="text-value" id="SMSBouncedDashboardAdmin"></div>
                                    <div class="text-uppercase text-muted small">SMS Bounced</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 p-0 form-group">
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="text-muted small text-uppercase font-weight-bold">Total Staff</div>
                                <div class="text-value-lg pb-1" id="TotalStaffDashboardAdmin"></div>
                                <div class="mx-auto">
                                    <h3 class="text-info"><i class="fa fa-bar-chart fa-lg mt-4"></i></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="text-muted small text-uppercase font-weight-bold">Total Service</div>
                                <div class="text-value-lg pb-1" id="TotalServiceDashboardAdmin"></div>
                                <div class="mx-auto">
                                    <h3 class="text-warning"><i class="fa fa-bar-chart fa-lg mt-4"></i></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <div class="text-muted small text-uppercase font-weight-bold">Total Client</div>
                                <div class="text-value-lg pb-1" id="TotalClientDashboardAdmin"></div>
                                <div class="mx-auto">
                                    <h3 class="text-success"><i class="fa fa-bar-chart fa-lg mt-4"></i></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 form-group p-0 containt-chart">
        <div class="col-12 col-xl-6 form-group p-0 p-md-2 m-0 pb-4">
            <div class="card m-0">
                <div class="card-header">
                    <div class="col-12 col-xl-6 p-0 text-center text-xl-left pt-1">
                        <p class="text-uppercase font-weight-bold">recent sales</p>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="bussinessRecentSale" name="bussinessRecentSale"></select>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="rangeDateRecentSale" name="rangeDateRecentSale">
                            <option value="7" selected>Last 7 Days</option>
                            <option value="30">Last 30 Days</option>
                        </select>
                    </div>
                </div>
                <div class="card-body pt-2">
                    <div class="col-12 p-0 form-group title-chart" id="titleChartRecentSale">
                        <div class="col-12 col-xl-4 title-sum">
                            <p class="font-weight-bold mb-0" id="sumAppointments"></p>
                            <p class="font-weight-normal mb-2">Appointments</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-appointment">
                            <p class="font-weight-bold mb-0" id="sumAppointmentsValue"></p>
                            <p class="font-weight-normal mb-2">Appointments value</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-sale">
                            <p class="font-weight-bold mb-0" id="sumSalesValue"></p>
                            <p class="font-weight-normal mb-2">Sales value</p>
                        </div>
                    </div>
                    <div class="col-12 p-0 form-group">
                        <canvas id="chartRecentSale"></canvas>
                    </div>
                </div>
            </div>
            <div class="card d-none m-0" name="notify">
                <div class="card-header text-center text-xl-left">
                    <p class="text-uppercase font-weight-bold">recent sales</p>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="text-center">
                        <h1><i class="fa fa-bar-chart fa-lg"></i></h1>
                        <h3 class="text-capitalize">Your Sale is Empty</h3>
                        <p>Make some invoice for sale data to appear</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6 form-group p-0 p-md-2 m-0 pb-4">
            <div class="card m-0">
                <div class="card-header">
                    <div class="col-12 col-xl-6 p-0 text-center text-xl-left pt-1">
                        <p class="text-uppercase font-weight-bold">upcoming appointments</p>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="bussinessUpcomingAppointment" name="bussinessUpcomingAppointment"></select>
                    </div>
                    <div class="col-12 col-xl-3 p-1">
                        <select class="form-control" id="rangeDateUpcomingAppointment" name="rangeDateUpcomingAppointment">
                            <option value="7" selected>Next 7 Days</option>
                            <option value="30">Next 30 Days</option>
                        </select>
                    </div>
                </div>
                <div class="card-body pt-2">
                    <div class="col-12 p-0 form-group title-chart" id="titleChartUpcomingAppointment">
                        <div class="col-12 col-xl-4 title-sum">
                            <p class="font-weight-bold mb-0" id="sumAppointmentsBooked"></p>
                            <p class="font-weight-normal mb-2">Appointments Booked</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-confirmed">
                            <p class="font-weight-bold mb-0" id="sumConfirmed"></p>
                            <p class="font-weight-normal mb-2">Confirmed</p>
                        </div>
                        <div class="col-12 col-xl-4 tilte-canceled">
                            <p class="font-weight-bold mb-0" id="sumCancelled"></p>
                            <p class="font-weight-normal mb-2">Cancelled</p>
                        </div>
                    </div>
                    <div class="col-12 p-0 form-group">
                        <canvas id="chartUpcomingAppointment"></canvas>
                    </div>
                </div>
            </div>
            <div class="card d-none m-0" name="notify">
                <div class="card-header text-center text-xl-left">
                    <p class="text-uppercase font-weight-bold">upcoming appointments</p>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="text-center">
                        <h1><i class="fa fa-bar-chart fa-lg"></i></h1>
                        <h3 class="text-capitalize">Your Schedule is Empty</h3>
                        <p>Make some appointments for schedule data to appear</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Extension/js/select2.min.js")"></script>
