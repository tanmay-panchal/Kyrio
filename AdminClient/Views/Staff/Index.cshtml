@model Int32
<!--#region Include CSS-->
@Styles.Render("~/Style/datatable")
<link href="@Url.Content("~/Extension/css/select2.min.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/icheck.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/PNotifyBrightTheme.css")" rel="stylesheet" />
@using AdminClient.Controllers.Global;
<link href="@Url.Content("~/Extension/css/daterangepicker.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/ivory-style.css")" rel="stylesheet">

<!--#endregion-->
<!--#region Html-->
<div class="animated fadeIn staff-page">
    <div class="col-md-12">
        <section class="nav-tabs-scrollable-container reports-nav">
            <ul class="nav nav-pills nav-main" id="myTab1" role="tablist">
                @{ if (CheckPermision.CheckPermissionFunction(nameof(Resources.Function.working_hours)))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Model == 1 ? "active show" : "" )" href="/Staff/WorkingHours" role="tab">WORKING HOURS</a>
                        </li>
                    }
                }

                @{ if (CheckPermision.CheckPermissionFunction(nameof(Resources.Function.closed_dates)))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Model == 2 ? "active show" : "" )" href="/Staff/CloseDate" role="tab">CLOSED DATES</a>
                        </li>
                    }
                }
                @{ if (CheckPermision.CheckPermissionFunction(nameof(Resources.Function.staff_members)))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Model == 3 ? "active show" : "" )" href="/Staff/StaffMember" role="tab">STAFF MEMBERS</a>
                        </li>}
                }
                @{ if (CheckPermision.CheckPermissionFunction(nameof(Resources.Function.permission_levels)))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Model == 4 ? "active show" : "" )" href="/Staff/Permissions" role="tab">PERMISSION LEVELS</a>
                        </li>
                    }
                }

            </ul>
        </section>
        <div class="tab-content tab-content-main" id="myTab1Content">
            <div class="tab-pane fade active show" role="tabpanel">
                @{
                    String fileView = "";
                    switch (Model)
                    {
                        case 1:

                            fileView = "/Views/Staff/WorkingHours/Index.cshtml";
                            break;
                        case 2:
                            fileView = "/Views/Staff/ClosedDates/Index.cshtml";
                            break;
                        case 3:
                            fileView = "/Views/Staff/StaffMembers/Index.cshtml";
                            break;
                        case 4:
                            fileView = "/Views/Staff/Permissions/Index.cshtml";
                            break;
                    }
                    @Html.Partial(fileView);
                }
            </div>
        </div>
    </div>
</div>
<!--#endregion-->
<!--#region Include JS-->
<script src="@Url.Content("~/Extension/js/daterangepicker.min.js")"></script>
<script src="@Url.Content("~/Extension/js/select2.min.js")"></script>
<script src="@Url.Content("~/Extension/js/icheck.min.js")"></script>
<script src="@Url.Content("~/Extension/js/jquery.inputmask.bundle.min.js")"></script>
@Scripts.Render("~/Scripts/datatable")
@Scripts.Render("~/Scripts/PNotify")
<!--#endregion-->