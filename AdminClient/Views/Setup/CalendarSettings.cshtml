<link href="@Url.Content("~/Extension/css/select2.min.css")" rel="stylesheet">
<link href="@Url.Content("~/Extension/css/intlTelInput.css")" rel="stylesheet" />
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong><i class="icon-settings"></i> Calendar Settings</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <form id="busiessForm">
                                <div class="form-group">
                                    <label class="col-form-label">APPOINTMENT COLORS</label>
                                    <select class="form-control" style="width: 100%" id="business_appointment_color_source" name="business_appointment_color_source" ispropertiesmodel>
                                        <option value="status">By booking status</option>
                                        <option value="service_group">By service group</option>
                                        <option value="employee">By staff booked</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">TIME SLOT INTERVAL</label>
                                    <select class="form-control" style="width: 100%" id="business_time_slot_minutes" name="business_time_slot_minutes" ispropertiesmodel>
                                        <option value="5">5 Minutes</option>
                                        <option value="10">10 Minutes</option>
                                        <option value="15">15 Minutes</option>
                                        <option value="30">30 Minutes</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">DEFAULT VIEW</label>
                                    <select class="form-control" style="width: 100%" id="business_default_calendar_view" name="business_default_calendar_view" ispropertiesmodel>
                                        <option value="day">Day</option>
                                        <option value="week">Week</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label">WEEK START DAY</label>
                                    <select class="form-control" style="width: 100%" id="business_beginning_of_week" name="business_beginning_of_week" ispropertiesmodel>
                                        <option value="0">Sunday</option>
                                        <option value="1">Monday</option>
                                        <option value="2">Tuesday</option>
                                        <option value="3">Wednesday</option>
                                        <option value="4">Thursday</option>
                                        <option value="5">Friday</option>
                                        <option value="6">Saturday</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12">
                            <button type="button" class="btn btn-custome" id="excuteButton" data-style="slide-right">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Extension/js/intlTelInput.min.js")"></script>
<script src="@Url.Content("~/Extension/js/select2.min.js")"></script>
<script src="@Url.Content("~/Scripts/setup/calendarsettings.js")"></script>
